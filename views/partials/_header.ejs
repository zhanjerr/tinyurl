<!-- views/partials/header.ejs -->
<header>
  <% if(!userID) { %>
  <form method="POST" action="/login">
    <label for="email">email:</label>
    <input id = "email" type="text" name="email" style="width: 100px">
    <label for="password">password:</label>
    <input id = "password" type="password" name="password" style="width: 100px">
    <input type="submit" value="Login">
  </form>
  <button onclick="location.href='/register';">Sign-up Now!</button>
  <% } else { %>
  <form method="POST" action="/logout">
    <p>
      Welcome user: <%= userID %>
      <input type="submit" value="Logout">
    </p>
  </form>
  <% }; %>
</header>