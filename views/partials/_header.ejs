<!-- views/partials/header.ejs -->
<header>
  <% if(!username) { %>
  <form method="POST" action="/login">
    <label for="username">Username:</label>
    <input id = "username" type="text" name="username" style="width: 100px">
    <input type="submit" value="Submit">
  </form>
  <% } else { %>
  <p>Welcome! <%= username %></p>
  <% }; %>
</header>